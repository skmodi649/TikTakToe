<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#312e2b"
    tools:context=".selection">

    <androidx.cardview.widget.CardView
        android:id="@+id/playComputer"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_margin="12dp"
        android:backgroundTint="#403f3c"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playAFriend">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:cropToPadding="true"
                android:padding="2dp"
                android:src="@drawable/computer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="36dp"
                android:padding="5dp"
                android:text="Play Computer"
                android:textColor="#bbbbbb"
                android:textSize="25sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/playAFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardElevation="40dp"
        android:outlineAmbientShadowColor="#80b74c"
        android:outlineSpotShadowColor="#80b74c"
        app:layout_constraintVertical_chainStyle="packed"
        android:backgroundTint="#80b74c"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/playComputer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="98dp"
                android:layout_height="98dp"
                android:cropToPadding="true"
                android:padding="2dp"
                android:src="@drawable/handshake" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="36dp"
                android:padding="5dp"
                android:text="Play a Friend"
                android:textColor="@color/white"
                android:textSize="25sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>